<div class="replies js-conversation-replies" style="height: auto; ">
  <div class="component" media="true" data-component-term="replies">
    <div class="replies-to" data-related-group-name="TweetsWithConversation">
      <div class="tweets-wrapper">
        <% posts.forEach(function(post){ %>
        <div class="simple-tweet tweet js-stream-tweet js-hover js-actionable-tweet js-profile-popup-actionable   sticky-actions colored-links" data-is-reply-to="true">
          <i class="dogear"></i>
          <div class="content">
            <div class="stream-item-header">
              <small class="time">
                <a href="/#!/<%= post.nickname %>/posts/<%= post.id %>" class="tweet-timestamp js-permalink" title="<%= post.created_at %>"><span class="_timestamp"></span></a>
              </small>
              <a class="account-group" href="/#!/<%= post.nickname %>" data-user-id="<%= post.id %>">
                <img class="avatar" src="<%= post.avatar_url %>" alt="<%= post.name %>">
                <strong class="fullname js-action-profile-name"><%= post.name %></strong>
                <span class="username js-action-profile-name"><s>@</s><b><%= post.nickname %></b></span>
              </a>
              <ul class="actions js-actions">
                <li class="action-reply-container">
                  <a class="with-icn js-action-reply" data-modal="tweet-reply" href="#" title="Reply">
                    <i class="action-reply"></i>
                    <b>Reply</b>
                  </a>
                </li>
                <li class="action-rt-container">
                  <a class="with-icn js-toggle-rt" data-modal="tweet-retweet" href="#">
                    <i class="action-rt"></i>

                    <b><span class="undo-retweet" title="Undo retweet">Retweeted</span><span class="retweet" title="Retweet">Retweet</span></b>
                  </a>
                </li>
                <li class="action-del-container">
                  <a class="with-icn js-action-del" href="#" title="Delete">
                    <i class="action-del"></i>
                    <b>Delete</b>
                  </a>
                </li>
                <li class="action-fav-container">
                  <a class="with-icn js-toggle-fav" href="#">
                    <i class="action-fav"></i>

                    <b><span class="unfavorite" title="Undo favorite">Favorited</span><span class="favorite" title="Favorite">Favorite</span></b>
                  </a>
                </li>
                <li class="action-open-container">
                  <span class="separator">Â·</span>
                  <a class="with-icn js-open-close-tweet" href="/#!/<%= post.nickname %>/posts/<%= post.id %>">
                    <span class="close-tweet" title="Close Tweet"> Close</span>
                    <span class="open-tweet" title="Open Tweet"> Open</span>
                    <span class="details-tweet" title="View Tweet details"> Details</span>
                  </a>
                </li>
              </ul>
            </div>
            <p class="js-tweet-text"><%= post.text %></p>
            <div class="stream-item-footer">

              <div class="context">
              </div>
              <a class="details with-icn js-details" href="#">
                <span class="js-icon-container">
                </span>
                <b>
                  <span class="view-open js-view-details">
                  </span>
                  <span class="hide-open js-hide-details">
                  </span>
                </b>
              </a>
            </div>
            <div class="expanded-content js-tweet-details-dropdown"></div>
          </div>
        </div>
        <% }); %>
      </div>
      <div class="content-divider down">
        <div class="outer-carrot"></div>
        <div class="inner-carrot"></div>
      </div>
    </div>
  </div>
</div>